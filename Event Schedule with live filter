<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Annual Tech Fest Schedule</title>
  <style>
    * {
      box-sizing: border-box;
      font-family: Arial, sans-serif;
      
    }

    body {
      margin: 0;
      padding: 20px;
      background: #f4f6f8;
    }

    h1 {
      text-align: center;
      margin-bottom: 20px;
    }

    
    .filters {
      display: flex;
      gap: 10px;
      justify-content: center;
      margin-bottom: 25px;
      flex-wrap: wrap;
    }

    .filters button {
      padding: 10px 16px;
      border: none;
      border-radius: 20px;
      cursor: pointer;
      background: #e0e0e0;
      transition: 0.3s;
    }

    .filters button.active {
      background: #007bff;
      color: white;
    }

    
    .event-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
      gap: 20px;
    }

    .event-card {
      background: white;
      padding: 16px;
      border-radius: 8px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.08);
    }

    .event-card h3 {
      margin: 0 0 8px;
    }

    .event-meta {
      font-size: 14px;
      color: #555;
      margin-bottom: 6px;
    }

    .no-events {
      text-align: center;
      font-size: 18px;
      color: #888;
      margin-top: 40px;
    }
  </style>
</head>
<body>

  <h1>Annual Tech Fest Schedule</h1>

  
  <div class="filters">
    <button class="active" data-filter="all">All</button>
    <button data-filter="Coding">Coding</button>
    <button data-filter="Workshop">Workshop</button>
    <button data-filter="Talk">Talk</button>
    <button data-filter="Day 1">Day 1</button>
    <button data-filter="Day 2">Day 2</button>
  </div>

  
  <div class="event-container" id="eventContainer"></div>
  <div class="no-events" id="noEvents" style="display:none;">
    No events match your filter ðŸ˜•
  </div>

  <script>
    const events = [
      {
        name: "Hackathon",
        category: "Coding",
        day: "Day 1",
        time: "10:00 AM",
        venue: "Lab A"
      },
      {
        name: "Web Development Workshop",
        category: "Workshop",
        day: "Day 1",
        time: "2:00 PM",
        venue: "Room 204"
      },
      {
        name: "AI & Future Tech Talk",
        category: "Talk",
        day: "Day 2",
        time: "11:00 AM",
        venue: "Auditorium"
      },
      {
        name: "Competitive Programming",
        category: "Coding",
        day: "Day 2",
        time: "3:00 PM",
        venue: "Lab B"
      }
    ];

    const eventContainer = document.getElementById("eventContainer");
    const noEvents = document.getElementById("noEvents");
    const buttons = document.querySelectorAll(".filters button");

    const renderEvents = (filteredEvents) => {
      eventContainer.innerHTML = "";

      if (filteredEvents.length === 0) {
        noEvents.style.display = "block";
        return;
      }

      noEvents.style.display = "none";

      filteredEvents.forEach(event => {
        const card = `
          <div class="event-card">
            <h3>${event.name}</h3>
            <div class="event-meta"><strong>Category:</strong> ${event.category}</div>
            <div class="event-meta"><strong>Day:</strong> ${event.day}</div>
            <div class="event-meta"><strong>Time:</strong> ${event.time}</div>
            <div class="event-meta"><strong>Venue:</strong> ${event.venue}</div>
          </div>
        `;
        eventContainer.innerHTML += card;
      });
    };

    buttons.forEach(button => {
      button.addEventListener("click", () => {
        buttons.forEach(btn => btn.classList.remove("active"));
        button.classList.add("active");

        const filterValue = button.dataset.filter;

        const filteredEvents = events.filter(event =>
          filterValue === "all" ||
          event.category === filterValue ||
          event.day === filterValue
        );

        renderEvents(filteredEvents);
      });
    });

    
    renderEvents(events);
  </script>

</body>
</html>



